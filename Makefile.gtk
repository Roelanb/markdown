CC = gcc
CFLAGS = -Wall -Wextra -O2 `pkg-config --cflags gtk+-3.0 webkit2gtk-4.1`
LDFLAGS = `pkg-config --libs gtk+-3.0 webkit2gtk-4.1`

TARGET = mdedit-gtk
SRCS = gtk_main.c gtk_editor.c buffer.c highlight.c emoji.c
OBJS = $(SRCS:.c=.o)

all: $(TARGET)

$(TARGET): $(OBJS)
	$(CC) $(OBJS) -o $(TARGET) $(LDFLAGS)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f $(OBJS) $(TARGET)

.PHONY: all clean
